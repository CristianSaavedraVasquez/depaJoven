<script src="routes/video.js"></script>

<%- layout('layouts/main') %>

<nav id="navbar" class="navbar navbar-expand-lg navbar-light bg-light">
        <a id="IMagen" href=""><img src="../../../public/img/Frame.png" alt=""></a>
    </nav>
<header class="main-header" id="mainheader2">
    <br>
    <div id="VerVideo">
        <h1><%= modulo.nombre %></h1>
        <div id="Video">
            <video class="fm-video video-js vjs-16-9 vjs-big-play-centered" data-setup="{}" controls controlsList="nodownload" id="VerVideo">
                <source src="<%= String(modulo.video_path).substr(26,121) %>" type="video/mp4">
            </video>
            <div id="BotonesVideo">
                <a class="btn" href="<%=String(modulo.material_path).substr(26,121)%>">Descarga El Material de la clase</a>
              <% if(usuario.isProfesor){%>  
                 <a href="/rev/taller/<%=taller._id%>/<%=modulo._id%>/delete" class="btn btn-warning">Borrar Modulo</a>   
                <% } %>
            </div>
        </div>
    </div> 
    <br>
</header>

<% include ../layouts/footer%>

<script>
    var reproductor = videojs('fm-video', {
        fluid: true
    });
</script>
