    <a id="IMagen" href=""><img src="../../public/img/Frame.png" alt=""></a>
</nav>
<Header id="mainheader2">
    <br>
    <div id="FinalizacionTallerAlumno">
       
        <% if(estudiante.taller.estado == 'Aprobado') { %>
            <h1>Felicitaciones, has completado el taller</h1>
        <%} else { %>
            <h1>Has completado el taller</h1>
        <% } %>    
