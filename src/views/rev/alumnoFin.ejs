            <br>
        </div>
        <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSfe8k9skrT3PmQmFffzekiWwwXzx2aoGha40Vuz2KolK2i56g/viewform?embedded=true" width="50%" height="300" frameborder="0" marginheight="5%" marginwidth="0">Loading…</iframe>
       
        <% if(estudiante.taller.estado == 'Aprobado') { %>
            <div class="Encuestas_Y_Certificados">
                <h2 class="Texto_Encuestas_Y_Certificados">Certificado</h2>
                <a href="/certificado" class="btn" id="BotonFinalizarA">Descargar</a>
            </div>       
        <%} %>
    </div>
    <br>
</Header>
