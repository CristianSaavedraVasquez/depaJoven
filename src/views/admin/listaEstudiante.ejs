</nav>
<header id="mainheader2">
    <br>
    <div id="GeneralListadoDeAlumnos">
        <h1>Listado de Usuarios</h1>
        <br>
        <div id="ListadoDeAlumnos">
            <% usuarios.forEach(user => { %> 
                <div id="InformacionPersonal">
                    <h2><%= user.nombre %></h2>
                    <h2><%= user.run %> </h2>
                   <% if(user.isProfesor){ %>
                     <h2>Profesor</h2>
                   <% } %>
                   <% if(!user.isProfesor){%>
                      <h2>Estudiante</h2> 
                   <% } %>
                   <form action="/admin/lista/<%= user._id %>/delete" method="POST">
                        <button>Eliminar usuario</button>
                   </form>
                </div>
                <br>
            <%});%>
        </div>
    </div>
    <br>
</header>
