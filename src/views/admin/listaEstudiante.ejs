<%- layout('layouts/main') %>
<nav class="navbar navbar-light bg-light">
    <a href="" id="BotonANav"><img src="../public/img/Frame.png" id="ImagenMuni" ></a>
    <div id="BarraDeNav">
        <a href="/logout" class="btn" id="BT1">Cerrar Sesi√≥n</a>
